<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Snippets" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitreAccueil" parent="Theme.Snippets">
        <item name="android:gravity">center_vertical</item>
        <item name="paddingStart">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#353535</item>
    </style>

    <style name="TextAccueil" parent="Theme.Snippets">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="CategoryLayoutXml" parent="TitreAccueil">
        <item name="background">@drawable/a0_shape_accueil_a1_linear_layout_xml_titre</item>
    </style>

    <style name="ItemLayoutXml" parent="TextAccueil">
        <item name="background">@drawable/a0_shape_accueil_a1_linear_layout_xml</item>
    </style>

    <style name="CategoryLayoutJava" parent="TitreAccueil">
        <item name="background">@drawable/a0_shape_accueil_a1_linear_layout_xml_titre</item>
    </style>


</resources>