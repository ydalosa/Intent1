<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A0_AccueilActivity">

    <TextView
        android:id="@+id/tvTitreLayoutXml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Layout XML"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Linear Layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitreLayoutXml" />

    <TextView
        android:id="@+id/tvFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Frame Layout"
        app:layout_constraintStart_toEndOf="@+id/tvLinearLayout"
        app:layout_constraintTop_toBottomOf="@+id/tvTitreLayoutXml" />

    <TextView
        android:id="@+id/tvRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Relative Layout"
        app:layout_constraintStart_toEndOf="@+id/tvFrameLayout"
        app:layout_constraintTop_toBottomOf="@+id/tvTitreLayoutXml" />

</androidx.constraintlayout.widget.ConstraintLayout>